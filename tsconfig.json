
{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./lib",   // Output directory for compiled files
      "rootDir": "./src",   // Root directory of your source files
      "moduleResolution": "node",
      "declaration": true,  // Generates .d.ts type declaration files
      "sourceMap": true     // Include source maps for debugging
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  